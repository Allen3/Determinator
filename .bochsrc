###############################################################
# bochsrc file for pragmalinux disk image.
#
# This file is provided both as .bochsrc and bochsrc so
# that it works on win32 and unix.
###############################################################

# how much memory the emulated machine will have
megs: 32

# filename of ROM images
romimage: file=bios/BIOS-bochs-latest, address=0xf0000
vgaromimage: bios/VGABIOS-elpin-2.40

diskc: file="./kern/bochs.img", cyl=200, heads=16, spt=63
diskd: file="./user/bochs.img", cyl=200, heads=16, spt=63
newharddrivesupport: enabled=1

# choose the boot disk.
boot: c

# where do we send log messages?
log: bochs.log
#log: /dev/stdout

# disable the mouse, since this pragmalinux is text only
mouse: enabled=0

#debug: action=ignore
info: action=ignore
error: action=report
panic: action=ask

vga_update_interval: 100
ips: 15000000

keyboard_serial_delay: 2

